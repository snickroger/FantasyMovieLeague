extends ../_layout

block styles
  link(rel="stylesheet" href="/stylesheets/style.css")

block content
  nav.navbar.sticky-top.navbar-expand-lg.navbar-dark.bg-dark
    a.navbar-brand(href="#") &#127909; Fantasy Movie League &mdash; Admin
      
  div.main: div.container
    div.row(style={"padding":"2.2em 0"})
      div.col-sm-10
        h2=`${seasonName} Players`
      div.col-sm-2
    div.row
      div.col
        if editedPlayer
          div.alert.alert-success(role="alert") Player edited!
    div.row
      div.col
        table.table.table-striped
          thead
            tr
              th(scope="col") ID
              th(scope="col") Name
              th(scope="col") Entered Date
              th
          tbody
